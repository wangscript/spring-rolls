<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-lazy-init="true">

	<description>使用JDK ScheduledExecutorService的定时任务配置</description>

	<!-- ScheduledThreadPoolExecutor集成工厂 -->
	<bean class="org.springframework.scheduling.concurrent.ScheduledExecutorFactoryBean" lazy-init="false">
		<property name="continueScheduledExecutionAfterException" value="true" />
		<property name="scheduledExecutorTasks">
			<list>
				<ref bean="scheduledExecutorTasks" />
			</list>
		</property>
	</bean>

	<!-- Task的封装 -->
	<bean id="scheduledExecutorTasks" class="org.springframework.scheduling.concurrent.ScheduledExecutorTask">
		<property name="runnable" ref="taskScheduledAutoExecutor" />
		<!-- 首次执行延期2秒 -->
		<property name="delay" value="2000" />
		<!-- 每次执行间隔20分钟 -->
		<property name="period" value="1200000" />
		<!-- 固定间隔,否则默认fixDelay会等到前一个任务完成后才开始计时. -->
		<property name="fixedRate" value="true" />
	</bean>

	<bean id="taskService" class="com.wisdom.example.service.task.TaskServiceImpl">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<!-- 定期执行的业务类 -->
	<bean id="taskScheduledAutoExecutor" class="com.wisdom.core.task.TaskScheduledAutoExecutor">
		<property name="run" value="true"/>
		<property name="taskService" ref="taskService"/>
	</bean>

	<!-- 手动执行的业务类 -->
	<bean id="taskScheduledManualExecutor" class="com.wisdom.core.task.TaskScheduledManualExecutor">
		<property name="taskService" ref="taskService"/>
	</bean>

	<bean id="taskCacheInit" class="com.wisdom.core.task.service.TaskCacheInit" init-method="init" lazy-init="false">
		<property name="taskService" ref="taskService" />
	</bean>
	
	
</beans>